@c lscov scripts/statistics/base/lscov.m
@anchor{XREFlscov}
@deftypefn  {Function File} {@var{x} =} lscov (@var{A}, @var{b})
@deftypefnx {Function File} {@var{x} =} lscov (@var{A}, @var{b}, @var{V})
